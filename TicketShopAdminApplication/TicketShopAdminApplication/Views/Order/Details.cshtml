@{
}

@model TicketShopAdminApplication.Models.Order

<div class="container">
    <div class="row">
        <a class="btn btn-success">Order For: @Model.User.Username</a>
    </div>

    @for (int i = 0; i < Model.Tickets.Count(); i++)
    {
        var item = Model.Tickets.ElementAt(i).SelectedTicket;

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 45rem;">
                    <img class="card-img-top" src="@item.Poster" style="height: 70%;" alt="Image for ticket!">

                    <div class="card-body">
                        <h3 class="card-title">@item.Movie</h3>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Genre</p>
                        <p class="card-text">@item.Rating</p>


                        <h6>Price: @item.Price ДЕН</h6>
                    </div>

                </div>
            </div>


        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>