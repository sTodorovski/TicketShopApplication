@model TicketShop.Domain.Identity.AddToShoppingCartDto

@{
    ViewData["Title"] = "Add to shopping cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color:#f8f9fa">
<h3 class="text-center">Add selected ticket to your shopping cart!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddTicketToCart">
            <input type="hidden" asp-for="TicketId"/>
            <div class="form-group">
                <label asp-for="SelectedTicket.Movie"></label>
                <input disabled asp-for="SelectedTicket.Movie" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="SelectedTicket.Rating"></label>
                <input disabled asp-for="SelectedTicket.Rating" class="form-control" />
            </div>

                <div class="form-group">
                    <label asp-for="SelectedTicket.Date"></label>
                    <input disabled asp-for="SelectedTicket.Date" class="form-control" />
                </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
</body>