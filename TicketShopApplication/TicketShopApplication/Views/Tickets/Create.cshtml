@model TicketShop.Domain.DomainModels.Ticket

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-color:#f8f9fa">
<h1>Create</h1>

<h4>Ticket</h4>
