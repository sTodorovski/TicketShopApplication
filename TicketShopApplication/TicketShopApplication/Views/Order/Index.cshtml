@{
}

@model List<TicketShop.Domain.DomainModelsOrder>
<body style="background-color:#f8f9fa">
<div class="container">

    <div class="row">
        <a class="btn btn-danger" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Costumer Details:</th>
                <th scope="col">Number of products:</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@item.User.Email</td>
                    <td>@item.Tickets.Count()</td>
                    <td><a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">Order Details</a></td>
                    <td><a class="btn btn-success" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice for Order</a></td>
                </tr>

            }
        </tbody>


    </table>

</div>
</body>